<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/num_verifybg"
    tools:context="com.example.user.emergencyamulance.Verifymobile">


    <EditText
        android:id="@+id/edit_num"
        android:layout_width="171dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:hint="@string/_92_3341369120"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:layout_gravity="center"/>



    <Button
        android:id="@+id/btn_ver_send"
        android:layout_width="210dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/verify_btn_bg"
        android:text="@string/send"
        android:textColor="@color/white"
        android:visibility="visible"
         />


    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:text="Enter the Phone Number"
        android:textSize="18sp"
         />

    <EditText
        android:id="@+id/edit_code"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/enter_the_code"
        android:inputType="textPersonName"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_ver_verify"
        android:layout_width="175dp"
        android:layout_height="wrap_content"

        android:background="@drawable/verify_btn_bg"
        android:text="@string/verify"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/btn_ver_resend"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:background="@drawable/verify_btn_bg"
        android:text="@string/resend"
        android:textColor="@color/white"
        />
    </LinearLayout>
</LinearLayout>