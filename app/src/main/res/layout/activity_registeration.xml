<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.user.emergencyamulance.Controllers.SignUpController"
    android:orientation="vertical"
    >


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="center_vertical"
                android:text="Registration"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <TextView
        android:id="@+id/lbl_OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="OR"
        android:textSize="24sp"
        android:fontFamily="@font/average_sans"
        android:layout_gravity="center"
         />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/fb_login_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/reg_signup" />

<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginTop="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_name" />

        <EditText
            android:id="@+id/txt_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/states_rounded_corners"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:hint="Name"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:inputType="textPersonName"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_phone"
            />

        <EditText
            android:id="@+id/txt_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="left |center_vertical"
            android:hint="Phone Number"
            android:paddingTop="5dp"
            android:background="@drawable/states_rounded_corners"
            android:textSize="18sp"
            android:inputType="phone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView

            android:layout_width="50dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_email_black_24dp" />

        <EditText
            android:id="@+id/txt_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/states_rounded_corners"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:hint="Email"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_lock_black_24dp" />

        <EditText
            android:id="@+id/txt_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/states_rounded_corners"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="left |center_vertical"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/txt_agreement"
        android:text="By Clicking “Register”, you agree to Terms and Conditions and Privacy Policy."
        android:textSize="16sp"
        />

</LinearLayout>

    <Button
        android:id="@+id/btn_reg_me"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/topBar"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="Register" />

</LinearLayout>
