<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.emergencyamulance.loginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="EMERGENCY AMBULANCE APP"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17sp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etext1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="13dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:hint="  Mobile Number"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textAlignment="center"

            android:textSize="20dp" />

        <EditText
            android:id="@+id/etext2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint=" **********"
            android:maxLength="20"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="20dp" />

        <CheckBox
            android:id="@+id/chk_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:buttonTint="#f44336"
            android:text="  Save Password"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="#F44336"
            android:text="LOGIN"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="#f44336"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="No Account? SignUp here"
            />
    </LinearLayout>


</RelativeLayout>
